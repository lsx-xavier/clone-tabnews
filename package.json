{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "implementação do tabnews.com.br para o curso.dev",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm run services:up && pnpm run wait-for-postgres && npm run migration:up && next dev",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "test": "pnpm run services:up  && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "test:watch": "jest --watchAll --runInBand",
    "migration:create": "node-pg-migrate -m infra/migrations create",
    "migration:up": "node-pg-migrate -m infra/migrations --envPath .env.development up",
    "wait-for-postgres": "node infra/scripts/wait-for-postgres.js",
    "prepare": "husky",
    "commit": "cz",
    "pre-commit": "gitleaks git --staged --verbose"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "async-retry": "1.3.3",
    "dotenv": "17.3.1",
    "dotenv-expand": "12.0.3",
    "next": "16.1.6",
    "node-pg-migrate": "8.0.4",
    "pg": "8.18.0",
    "react": "19.2.4",
    "react-dom": "19.2.4"
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "commitizen": "4.3.1",
    "concurrently": "9.2.1",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.4",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.6.0",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "prettier": "3.8.1"
  }
}
